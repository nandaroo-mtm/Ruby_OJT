<div class="mt-5">
  <div class="card mx-auto" style="width: 500px;">
    <div class="card-header">
      <h3>Sign Up</h3>
    </div>
    <div class="card-body">
      <%= bootstrap_form_for(@user) do |f| %>
        <%= f.text_field :user_name, label: "User Name", placeholder: "Enter your name" %>
        <%= f.email_field :email, label: "Email", placeholder: "Enter your email" %>
        <%= f.password_field :password, placeholder: "Enter at least 6 characters" %>
        <%= f.password_field :password_confirmation, placeholder: "Enter at least 6 characters" %>
        <%= f.submit "Sign Up", class: ["btn btn-sm btn-primary"] %>
      <% end %>
    </div>
  </div>
</div>
