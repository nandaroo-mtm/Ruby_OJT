<div class="row mt-5 text-center">
    <h2>Welcome</h2>
    <div>
        <% if !logged_in %>
            <%= link_to 'Login' , login_path, method: :get, class: ['btn btn-sm btn-primary'] %>
            <%= link_to 'Signup' , new_user_path, method: :get, class: ['btn btn-sm btn-primary ml-3'] %>
        <% else %>
            <%= link_to 'Logout' , logout_path, method: :delete, class: ['btn btn-sm btn-primary ml-3'] %>
        <% end %>
    </div>
</div>
