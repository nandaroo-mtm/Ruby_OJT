<div class="container">
  <div class="row mt-5">
    <div class="col-8 mx-auto">
      <div class="mb-3">
        <%= link_to "Create",
        new_category_path,
        method: :get,
        class: "btn btn-sm btn-primary" %>
        <%= link_to "Export",
        categories_export_path(format: "csv"),
        method: :get,
        class: "btn btn-sm btn-info" %>
        <%= link_to "Import",
        categories_import_path,
        method: :get,
        class: "btn btn-sm btn-secondary" %>
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col" style="width: 40%;">Name</th>
            <th scope="col">
              Actions
            </th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |c| %>
            <tr>
              <th scope="row"><%= c[:id] %></th>
              <td style="width: 40%;"><%= c[:name] %></td>
              <td>
                <%= link_to "Edit",
                "/categories/#{c[:id]}/edit",
                method: :get,
                class: "btn btn-sm btn-outline-success me-2  mb-sm-2" %>
                <%= button_to "Delete",
                category_path(c),
                data: {
                  confirm: "Are you sure?",
                  turbo_confirm: "Are you sure?"
                },
                method: :delete,
                class: "btn btn-sm btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
